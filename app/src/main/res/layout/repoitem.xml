<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF"
    android:gravity="start"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="25dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_height="25dp"
        android:layout_width="wrap_content"
        android:text="First Repository"
        android:textColor="#000"
        android:textSize="16sp"
        android:id="@+id/repo_name"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/repo_desc"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:text="This is a description super longitun super long super long super long super long super long super long"
        android:textColor="#000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/repo_authpic"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:gravity="left"
            android:src="@drawable/face"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/repo_author"
            android:layout_width="168dp"
            android:layout_height="25dp"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="User1"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/starpic"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:gravity="right"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/repo_rating"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="5.1k"
            android:textColor="#000"
            android:textSize="14sp"
            android:paddingRight="35dp"/>


    </LinearLayout>



</LinearLayout>
